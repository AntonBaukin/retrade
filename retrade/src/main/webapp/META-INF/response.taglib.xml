<?xml version = '1.0' encoding = 'UTF-8'?>

<facelet-taglib version = '2.0' xmlns = 'http://java.sun.com/xml/ns/javaee'
  xmlns:xsi = 'http://www.w3.org/2001/XMLSchema-instance'
  xsi:schemaLocation = 'http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd'>

  <description>
    Tag library for POST request response XML
    generated by pages using ExtJSF.
  </description>

  <display-name>
    ExtJSF Response Tag Library
  </display-name>

  <namespace>http://extjs.jsf.java.net/response</namespace>

  <tag>
    <tag-name>response</tag-name>
    <handler-class>com.tverts.faces.system.ResponseTag</handler-class>
  </tag>

  <tag>
    <tag-name>script</tag-name>
    <handler-class>com.tverts.faces.system.ResponseTag</handler-class>
  </tag>

  <tag>
    <tag-name>validation</tag-name>
    <handler-class>com.tverts.faces.system.ResponseTag</handler-class>

    <attribute>
      <name>success</name>
      <required>true</required>
      <type>java.lang.Boolean</type>
    </attribute>

    <attribute>
      <name>target</name>
      <type>java.lang.String</type>
    </attribute>
  </tag>

  <tag>
    <tag-name>field</tag-name>
    <handler-class>com.tverts.faces.system.ResponseTag</handler-class>

    <attribute>
      <name>target</name>
      <type>java.lang.String</type>
    </attribute>
  </tag>

  <tag>
    <tag-name>error</tag-name>
    <handler-class>com.tverts.faces.system.ResponseTag</handler-class>
  </tag>

</facelet-taglib>