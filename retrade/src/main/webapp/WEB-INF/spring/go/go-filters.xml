<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Go Filters                                     =
    =================================================-->

  <bean name  = 'goFilters' class = 'com.tverts.servlet.filters.FiltersList'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Go Domain Index Page
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.retrade.web.GoDomainIndexPage'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Login processor for localhost requests
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.secure.system.LocalLoginFilter'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Go JavaServer Faces
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.faces.system.GoServerFaces'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Go JavaServer Pages
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.servlet.filters.GoServerPages'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Go JavaScripts
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.jsx.pages.JsGoFilter'/>

      </list>
    </property>
  </bean>
</beans>