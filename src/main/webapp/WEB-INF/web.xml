  <!--====================================================
    = JSP Engine Configuration                           =
    ====================================================-->

  <welcome-file-list>
    <welcome-file>index.xhtml</welcome-file>
  </welcome-file-list>

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <url-pattern>*.jspf</url-pattern>

      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
