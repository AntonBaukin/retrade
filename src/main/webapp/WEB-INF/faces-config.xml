<?xml version = '1.0' encoding = 'UTF-8'?>

<faces-config version = '2.0'
  xmlns              = 'http://java.sun.com/xml/ns/javaee'
  xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
  xsi:schemaLocation = 'http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd'>


  <!--=================================================
    =  Application System Properties                  =
    =================================================-->

  <application>
    <variable-resolver>
      org.springframework.web.jsf.SpringBeanVariableResolver
    </variable-resolver>

    <locale-config>
      <default-locale>ru</default-locale>
      <supported-locale>ru</supported-locale>
    </locale-config>
  </application>

  <factory>
    <view-declaration-language-factory>
      com.tverts.faces.system.LocalViewDeclarationLanguageFactory
    </view-declaration-language-factory>
  </factory>


  <!--=================================================
    =  Converters + Formatters                        =
    =================================================-->

  <converter>
    <converter-id>
      com.tverts:fmt:date2str
    </converter-id>

    <converter-class>
      com.tverts.faces.formatters.DateToStr
    </converter-class>
  </converter>

  <converter>
    <converter-id>
      com.tverts:fmt:time2str
    </converter-id>

    <converter-class>
      com.tverts.faces.formatters.TimeToStr
    </converter-class>
  </converter>

  <converter>
    <converter-id>
      com.tverts:fmt:datetime2str
    </converter-id>

    <converter-class>
      com.tverts.faces.formatters.DateTimeToStr
    </converter-class>
  </converter>

  <converter>
    <converter-id>
      com.tverts:fmt:special:json-strings-map-list
    </converter-id>

    <converter-class>
      com.tverts.faces.formatters.JSONStringsMapListFormatter
    </converter-class>
  </converter>

  <converter>
    <converter-id>
      com.tverts:fmt:special:bool-map-items
    </converter-id>

    <converter-class>
      com.tverts.faces.formatters.BoolMapItemsConverter
    </converter-class>
  </converter>

</faces-config>