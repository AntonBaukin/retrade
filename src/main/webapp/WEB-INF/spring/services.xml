<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  System Services                               =
    =================================================-->

  <bean name  = 'servicesPoint' factory-method = 'getInstance'
        class = 'com.tverts.system.ServicesPoint'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Primary Self Shunt Service                                ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <!--
        <ref bean = 'selfShuntService'/>
        -->

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Genesis Service                                           ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <!--
        <ref bean = 'genesisService'/>
        -->
      </list>
    </property>
  </bean>


  <bean name  = 'zServicesPoint' factory-method = 'getInstance'
        class = 'com.tverts.system.zservices.ServicesPoint'>

    <property name = 'system' ref = 'servicesSystem'/>
  </bean>

  <bean name  = 'servicesSystem'
        class = 'com.tverts.system.zservices.ServicesSystem'>

    <property name = 'reference'>
      <bean class  = 'com.tverts.system.zservices.ServicesList'>
        <property name = 'references'>
          <list>

            <bean class = 'com.tverts.system.zservices.TestService'>
              <property name = 'UID' value = 'ztest-a'/>
            </bean>

            <bean class = 'com.tverts.system.zservices.TestService'>
              <property name = 'UID' value = 'ztest-f'/>
              <property name = 'depends' value = 'ztest-b, ztest-e'/>
            </bean>

            <bean class = 'com.tverts.system.zservices.TestService'>
              <property name = 'UID' value = 'ztest-e'/>
              <property name = 'depends' value = 'ztest-a, ztest-d'/>
            </bean>

            <bean class = 'com.tverts.system.zservices.TestService'>
              <property name = 'UID' value = 'ztest-d'/>
              <property name = 'depends' value = 'ztest-a, ztest-c'/>
            </bean>

            <bean class = 'com.tverts.system.zservices.TestService'>
              <property name = 'UID' value = 'ztest-c'/>
              <property name = 'depends' value = 'ztest-a, ztest-b'/>
            </bean>

            <bean class = 'com.tverts.system.zservices.TestService'>
              <property name = 'UID' value = 'ztest-b'/>
            </bean>

          </list>
        </property>
      </bean>
    </property>
  </bean>


  <!--=================================================
    =  System Services Synch Point (Bus)              =
    =================================================-->

  <bean name  = 'servicesSynchPoint' factory-method = 'getInstance'
        class = 'com.tverts.system.mp.ServicesSynchPoint'/>


</beans>