<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  System Services                               =
    =================================================-->

  <bean name  = 'servicesPoint' factory-method = 'getInstance'
        class = 'com.tverts.system.ServicesPoint'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Primary Self Shunt Service.                               ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <ref bean = 'selfShuntService'/>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Genesis Service.                               ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <ref bean = 'genesisService'/>
      </list>
    </property>
  </bean>


  <!--=================================================
    =  System Services Synch Point (Bus)              =
    =================================================-->

  <bean name  = 'servicesSynchPoint' factory-method = 'getInstance'
        class = 'com.tverts.system.mp.ServicesSynchPoint'/>


</beans>