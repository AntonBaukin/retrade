<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Servlet Filter Point                           =
    =================================================-->

  <bean name  = 'filterPoint' factory-method = 'getInstance'
        class = 'com.tverts.servlet.filters.FilterPoint'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Binds the request to Servlet-related components.          ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.servlet.filters.WebApplicationRequestFilter'/>
      </list>
    </property>
  </bean>

</beans>