<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Servlet Context Listeners                      =
    =================================================-->

  <bean name  = 'servletContextListenerPoint' factory-method = 'getInstance'
        class = 'com.tverts.servlet.listeners.ServletContextListenerPoint'>

    <property name = 'listeners'>
      <list>

      </list>
    </property>
  </bean>


  <!--=================================================
    =  Servlet Request Listeners                      =
    =================================================-->

  <bean name  = 'servletRequestListenerPoint' factory-method = 'getInstance'
        class = 'com.tverts.servlet.listeners.ServletRequestListenerPoint'>

    <property name = 'listeners'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Binds the request to Servlet-related components.          ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.servlet.listeners.WebApplicationRequestListener'/>

      </list>
    </property>
  </bean>

</beans>