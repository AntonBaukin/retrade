<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Servlet Filter Point                           =
    =================================================-->

  <bean name  = 'filterPoint' factory-method = 'getInstance'
        class = 'com.tverts.servlet.filters.FilterPoint'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Binds the request to Servlet-related components.          ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.servlet.filters.WebApplicationRequestFilter'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Openes nested Spring transaction scope for the rest of    ·
         · the chained filters. All the following filters are        ·
         · in the context of single transaction.                     ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.system.tx.TransactionScopeFilter'>

          <property name = 'scopeBeanName'>
            <idref bean = 'txScopeBean'/>
          </property>
        </bean>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Handles Self Shunt requests.                              ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <ref bean = 'selfShuntFilter'/>
      </list>
    </property>
  </bean>

</beans>