<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>

  <!--=================================================
    =  Sphere of Genesis Tests                        =
    +==================================================
    |
    |  These tests are simple genesis units. If they
    |  are invoked successfully, the core of Genesis
    |  Service works fine.
    |
    +================================================-->

  <bean name  = 'genesisSphereTests'
        class = 'com.tverts.genesis.GenesisSphere'>

    <!-- the list of genesis units in this sphere -->
    <constructor-arg>
      <bean class = 'com.tverts.genesis.GenesisList'>
        <property name = 'references'>
          <list>

            <!-- simple -->
            <bean class = 'com.tverts.genesis.TestGenesisPart'>

              <property name = 'name' value = 'testGenesisUnitSimple'/>
            </bean>

            <!-- disabled -->
            <bean class = 'com.tverts.genesis.TestGenesisPart'>

              <property name  = 'name'
                        value = 'testGenesisUnitDisabled'/>

              <property name  = 'disabled'
                        value = 'true'/>
            </bean>

            <!-- waiting single shunt test -->

            <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
             · WARNING: waits for Self Shunt Service causes deadlock     ·
             ·  when that service waits for initial tasks of Genesis!    ·s
             · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->

            <!--
            <bean class = 'com.tverts.genesis.TestGenesisPart'>

              <property name  = 'name'
                        value = 'testGenesisUnitWaitingSingleShunt'/>

              <property name  = 'waitSingleShunt'
                        value = 'shuntSelfSuccess'/>
            </bean>
            -->

            <!-- waiting group of shunt tests -->

            <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
             · WARNING: waits for Self Shunt Service causes deadlock     ·
             ·  when that service waits for initial tasks of Genesis!    ·s
             · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->

            <!--
            <bean class = 'com.tverts.genesis.TestGenesisPart'>

              <property name  = 'name'
                        value = 'testGenesisUnitWaitingGroupOfShunts'/>

              <property name  = 'waitShuntGroupsStr'
                        value = 'system:shunts:success'/>
            </bean>
            -->

          </list>
        </property>
      </bean>
    </constructor-arg>
  </bean>
</beans>
