<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>

  <!--=================================================
    =  Self Shunts Protocols for Web                  =
    +==================================================
    |
    |   These protocols processing the request sending
    |   them via HTTP protocol.
    |
    +================================================-->

  <bean name  = 'selfShuntInitialTasksWeb'
        class = 'com.tverts.shunts.SelfShuntWhat'>

    <constructor-arg>

      <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
       · The list of groups defining the Self Shunt instances      ·
       · to invoke after the System startaup.                      ·
       · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
      <bean class = 'com.tverts.shunts.protocol.SeShProtocolWebMulti'>
        <constructor-arg>
          <bean class = 'com.tverts.shunts.protocol.SeShRequestGroups'>
            <property name  = 'groupsStr'>
              <value>

                system:shunts:success,
<!--            system:shunts:killme,                               -->
                system:tx:scopes

              </value>
            </property>
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

</beans>