<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Go Filters                                     =
    =================================================-->

  <import resource = 'go/go-filters.xml'/>


  <!--=================================================
    =  Servlet Filter Point                           =
    =================================================-->

  <bean name  = 'filterPoint' factory-method = 'getInstance'
        class = 'com.tverts.servlet.filters.FilterPoint'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Binds the request to Servlet-related components
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.servlet.filters.WebApplicationRequestFilter'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Secured access filter and login page Redirector
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.secure.system.LoginFilter'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Sends HTTP redirect to refer actual user model instance
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.model.NoModelFilter'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Openes nested Spring transaction scope for the rest of    ·
         · the chained filters. All the following filters are        ·
         · in the context of single transaction                      ·
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.system.tx.TransactionScopeFilter'>

          <property name = 'scopeBeanName'>
            <idref bean = 'txScopeBean'/>
          </property>
        </bean>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Handles Self Shunt requests
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <ref bean = 'selfShuntFilter'/>


        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Go Filters [must be the last]
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <ref bean = 'goFilters'/>

      </list>
    </property>
  </bean>

</beans>