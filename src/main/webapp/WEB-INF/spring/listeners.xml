<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Servlet Context Listeners                      =
    =================================================-->

  <bean name  = 'servletContextListenerPoint' factory-method = 'getInstance'
        class = 'com.tverts.servlet.listeners.ServletContextListenerPoint'>

    <property name = 'references'>
      <list>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Activates Database Keys Generators
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.endure.keys.KeysPointActivator'/>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Executes SQL queries related to Hibernate files
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.hibery.sql.HiberSQLActivator'/>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Automatically creates Unity Types
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <ref bean = 'unityTypesActivator'/>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Registers Executors
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.exec.ExecutorsActivator'/>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Initializes system services
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.system.services.InitServicesListener'/>

        <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
         · Report System is ready
         · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
        <bean class = 'com.tverts.system.SystemReadyListener'/>

      </list>
    </property>
  </bean>
</beans>