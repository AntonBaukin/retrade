<?xml version = '1.0' encoding = 'UTF-8'?>

<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd'>


  <!--=================================================
    =  Model (Point) Prototype                        =
    =================================================-->

  <bean name  = 'modelPointPrototype' scope = 'prototype'
        class = 'com.tverts.model.DelegatingModelPoint'>

    <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
     · Model Store (Prototype)                                   ·
     · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
    <property name = 'modelStore'>
      <bean class = 'com.tverts.model.store.SimpleModelStore'>

        <property name = 'keysGen'>
          <bean class = 'com.tverts.model.keys.ModelKeysGenHiber'/>
        </property>
      </bean>
    </property>
  </bean>


  <!--=================================================
    =  Model Access Point                             =
    =================================================-->

  <bean name  = 'modelAccessPoint' factory-method = 'getInstance'
        class = 'com.tverts.model.ModelAccessPoint'>

    <!-- · · · · · · · · · · · · · · · · · · · · · · · · · · · · ·
     · Model Access Strategy                                     ·
     · · · · · · · · · · · · · · · · · · · · · · · · · · · · · -->
    <property name  = 'modelAccess'>
      <bean class = 'com.tverts.model.ModelAccessMemory'>

        <property name  = 'modelBean'>
          <idref bean = 'modelPointPrototype'/>
        </property>
      </bean>
    </property>
  </bean>

</beans>