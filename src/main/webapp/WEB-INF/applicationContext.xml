<beans xmlns          = 'http://www.springframework.org/schema/beans'
   xmlns:xsi          = 'http://www.w3.org/2001/XMLSchema-instance'
   xmlns:context      = 'http://www.springframework.org/schema/context'
   xsi:schemaLocation = 'http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-3.0.xsd'>


  <!--=================================================
    =  Annotation Based Configuration                 =
    =================================================-->

  <context:annotation-config/>


  <!--=================================================
    =  AspectJ Weaving                                =
    +==================================================
    |
    |   Required for the declared transaction
    |   demarcation to work.
    |
    +================================================-->

  <context:load-time-weaver/>


  <!--=================================================
    =  Beans Scan (auto detection) Packages            =
    =================================================-->

  <context:component-scan base-package = 'com.tverts'/>


  <!--=================================================
    =  Web Application related Beans                  =
    =================================================-->

  <import resource = 'spring/webappListeners.xml'/>
  <import resource = 'spring/webappFilters.xml'/>
  <import resource = 'spring/systemServices.xml'/>

</beans>