<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.aggr.calc'>

  <class name = 'AggrCalcItemBase' abstract = 'true' lazy = 'false'>

    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_aggr_calc_item'/>


    <!-- Transaction Number -->

    <property name = 'txn'>

      <column name = 'txn' not-null = 'true'
        index = '_ix_aggr_calc_txn'>

        <comment>Transaction Number (txn)</comment>
      </column>
    </property>


    <!-- Aggregation Calculation -->

    <many-to-one name = 'aggrCalc' foreign-key = 'fk_aggr_calc_'>

      <column name = 'fk_aggr_calc' not-null = 'true'
        index = '_ix_aggr_calc'>

        <comment>The Aggregation Calculation this item is component of</comment>
      </column>
    </many-to-one>
  </class>
</hibernate-mapping>