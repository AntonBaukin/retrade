<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.aggr.volume'>

  <class name = 'MonthVolumeCalcLink' lazy = 'false'
    table = 'aggr_calc_volume_month_link'>


    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_calc_link_volume_month'/>


    <!-- MonthVolumeCalcItem Reference -->

    <many-to-one name = 'calcItem' lazy = 'proxy'
      foreign-key = 'fk_calc_link_volume_month'>

      <column name = 'fk_calc_item' not-null = 'true'
        unique-key = 'ux_calc_link_volume_month'>

        <comment>Month Volume Calc [aggregation] Item reference</comment>
      </column>
    </many-to-one>


    <!-- Copy of the key of the Aggreggated Item Volume -->

    <property name = 'aggrItem'>

      <column name = 'aggr_item' not-null = 'true'
        unique-key = 'ux_calc_link_volume_month'
        index      = 'ix_calc_link_volume_month_item'>

        <comment>Aggregated Volume Item reference</comment>
      </column>
    </property>


    <!-- Volume Positive -->

    <property name = 'volumePositive' type = 'big_decimal'>

      <column name = 'volume_positive' precision = '12' scale = '3'>

        <comment>The volume (amount) added</comment>
      </column>
    </property>


    <!-- Volume Negative -->

    <property name = 'volumeNegative' type = 'big_decimal'>

      <column name = 'volume_negative' precision = '12' scale = '3'>

        <comment>The volume (amount) removed</comment>
      </column>
    </property>

  </class>
</hibernate-mapping>