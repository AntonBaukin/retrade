<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.core'>

  <class name = 'UnityView' abstract = 'true' lazy = 'true'
    table = 'core_unity_view'>

    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_unity_view'/>


    <!-- Unity -->

    <many-to-one name = 'unity' cascade = 'save-update'
      foreign-key = 'fk_unity_view_mirrow'>

      <column name = 'fk_unity' unique = 'true'>
        <comment>The (unique) Unified Mirrow of the Unity View</comment>
      </column>
    </many-to-one>


    <!-- View Owner (Unity) -->

    <many-to-one name = 'viewOwner' foreign-key = 'fk_unity_view_owner'>

      <column name = 'fk_view_owner' not-null = 'true'
        index = 'ix_unity_view_owner'>

        <comment>The Unity owning this View</comment>
      </column>
    </many-to-one>


    <!-- View (Unity) Type -->

    <many-to-one name = 'viewType' foreign-key = 'fk_unity_view_type'
      outer-join = 'false' lazy = 'false'>

      <column name = 'fk_view_type' not-null = 'true'>
        <comment>The (Unity) Type of the View</comment>
      </column>
    </many-to-one>


    <!-- View Date -->

    <property name = 'viewDate' type = 'timestamp'>

      <column name = 'view_date' index = 'ix_unity_view_date'>
        <comment>The creation or last update time of the View</comment>
      </column>
    </property>


    <!-- View Text Comment -->

    <property name = 'viewText' type = 'text'>

      <column name = 'view_text'>
        <comment>The comment on the View</comment>
      </column>
    </property>


  </class>
</hibernate-mapping>