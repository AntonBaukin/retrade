<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.core'>

  <class name = 'UnityViewLink' lazy = 'true'
    table = 'core_unity_view_link'>

    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_unity_view_link'/>


    <!-- Linked Unity View -->

    <many-to-one name = 'view' foreign-key = 'fk_unity_view'>

      <column name = 'fk_unity_view' not-null = 'true'
        index = 'ix_unity_view'>

        <comment>The Unity View linked</comment>
      </column>
    </many-to-one>


    <!-- Link Target (Unity) -->

    <many-to-one name = 'linked' foreign-key = 'fk_unity_view_target'>

      <column name = 'fk_link_target' not-null = 'true'
        index = 'ix_unity_view_target'>

        <comment>The Unity View Link referred Unity</comment>
      </column>
    </many-to-one>

  </class>
</hibernate-mapping>