<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package = 'com.tverts.endure'>

  <class name = 'Unity' table = 'core_unity' lazy = 'false'>

    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_unity'/>


    <!-- Unity Type -->

    <many-to-one name = 'unityType' foreign-key = 'fk_unity_type'
      outer-join = 'false'>

      <column name = 'fk_unity_type' not-null = 'true'>
        <comment>The Type of Unity</comment>
      </column>
    </many-to-one>

  </class>
</hibernate-mapping>