<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.core'>

  <class name = 'UnityLink' table = 'core_unity_link' lazy = 'true'>

    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_unity_link'/>


    <!-- Unity -->

    <many-to-one name = 'unity' cascade = 'save-update'
      foreign-key = 'fk_unity_link_mirror'>

      <column name = 'fk_unity' unique-key = 'ux_unity_link_unity'>

        <comment>The (unique) Unified Mirror of the Unity Link</comment>
      </column>
    </many-to-one>


    <!-- Link (Unity) Type -->

    <many-to-one name = 'linkType' foreign-key = 'fk_unity_link_type'>

      <column name = 'fk_link_type' not-null = 'true'>
        <comment>The Type of Unity Link</comment>
      </column>
    </many-to-one>


    <!-- Link Target (Unity) -->

    <many-to-one name = 'linked' foreign-key = 'fk_unity_link_target'>

      <column name = 'fk_link_target' not-null = 'true'
        index = 'ix_unity_link_target'>

        <comment>The Unity Link target Unity</comment>
      </column>
    </many-to-one>


    <!-- Link Owner (Unity) -->

    <many-to-one name = 'owner' foreign-key = 'fk_unity_link_owner'>

      <column name = 'fk_link_owner' not-null = 'true'
        index = 'ix_unity_link_owner, ix_unity_link_target'>

        <comment>The Unity owning the Link</comment>
      </column>
    </many-to-one>


    <!-- Link Group -->

    <property name = 'linkGroup'>

      <column name = 'link_group' not-null = 'true'>
        <comment>The group key of the n-ary link</comment>
      </column>
    </property>


    <!-- Link Helper -->

    <property name = 'linkHelper'>

      <column name = 'link_helper' not-null = 'true' default = '0'
        index = 'ix_unity_link_owner'>

        <comment>The helper attribute of the n-ary link</comment>
      </column>
    </property>

  </class>
</hibernate-mapping>