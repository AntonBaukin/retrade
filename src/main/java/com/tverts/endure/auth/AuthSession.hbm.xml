<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.auth'>

  <class name = 'AuthSession' table = 'auth_session' lazy = 'false'>

    <!-- Session ID (Primary Key) -->

    <id name = 'sessionId'>
      <column name = 'session_id' length = '16'/>
    </id>


    <!-- Login reference -->

    <many-to-one name = 'login' foreign-key = 'fk_session_login'>

      <column name = 'fk_login' not-null = 'true'
        index = 'ix_session_login'>

        <comment>Login this Session is created for</comment>
      </column>
    </many-to-one>


    <!-- Password Hash -->

    <property name = 'sessionKey' type = 'string'>

      <column name = 'session_key' not-null = 'true'
        length = '40' sql-type = 'character(40)'>

        <comment>HEX string with 20-byte computed private session key</comment>
      </column>
    </property>


    <!-- Rs (Server Random) -->

    <property name = "serverRandom" type = 'string'>

      <column name = 'server_random' not-null = 'true'
        length = '40' sql-type = 'character(40)'
        index = 'ix_session_login'>

        <comment>
          HEX string with secure random 20 bytes
          generated by the server during the login
        </comment>
      </column>
    </property>


    <!-- Create Time -->

    <property name = 'createTime' type = 'timestamp'>

      <column name = 'create_time' not-null = 'true'>
        <comment>The timestamp the Session was created</comment>
      </column>
    </property>


    <!-- Access Time -->

    <property name = 'accessTime' type = 'timestamp'>

      <column name = 'access_time'>
        <comment>The timestamp the last request with this Session</comment>
      </column>
    </property>


    <!-- Close Time -->

    <property name = 'closeTime' type = 'timestamp'>

      <column name = 'close_time'>
        <comment>The timestamp the Session was closed</comment>
      </column>
    </property>


    <!-- Sequence Number -->

    <property name = 'sequence'>

      <column name = 'sequence_number' not-null = 'true'>

        <comment>An integer value incremented with each valid request</comment>
      </column>
    </property>


    <!-- Bind Key -->

    <property name = 'bind' type = 'string'>

      <column name = 'bind_key' length = '40'
        sql-type = 'character(40)'
        index = 'ix_session_bind'>

        <comment>
          HEX string with secure 20 bytes to bind
          auth session with web session. (Cleared
          after the first usage.)
        </comment>
      </column>
    </property>

  </class>
</hibernate-mapping>