<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.order'>

  <class name = 'ExternalOrder' table = 'core_external_order' lazy = 'false'>

    <!-- Primary Key -->

    <id name = 'primaryKey' column = 'pk_external_order'/>


    <!-- Order Owner -->

    <many-to-one name = 'orderOwner' foreign-key = 'fk_external_order_owner'>

      <column name = 'fk_order_owner' not-null = 'true'
        index = 'ix_external_order'>

        <comment>Unity instance owning the order space</comment>
      </column>
    </many-to-one>


    <!-- Order (Unity) Type -->

    <many-to-one name = 'orderType' foreign-key = 'fk_external_order_type'>

      <column name = 'fk_order_type' not-null = 'true'
        index = 'ix_external_order'>

        <comment>The Unity Type selecting order space by the owner</comment>
      </column>
    </many-to-one>


    <!-- Order Index -->

    <property name = 'orderIndex'>

      <column name = 'order_index' not-null = 'true'
        index = 'ix_external_order'>

        <comment>The index within the order space</comment>
      </column>
    </property>


    <!-- Order Instance -->

    <property name = 'orderInstance'>

      <column name = 'order_instance' not-null = 'true'
        index = 'ix_external_order_instance'>

        <comment>Copy of the primary key of the instance referred</comment>
      </column>
    </property>

  </class>
</hibernate-mapping>