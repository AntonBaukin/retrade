<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.person'>

  <union-subclass name = 'Person' extends = 'com.tverts.endure.core.Entity'
    table = 'core_person' lazy = 'false'>


    <!-- Domain reference -->

    <many-to-one name = 'domain' foreign-key = 'fk_core_person_domain'>

      <column name = 'fk_domain' not-null = 'true'
        index = 'ix_core_person_domain'>

        <comment>Domain where the Person is registered</comment>
      </column>
    </many-to-one>


    <!-- Last, First, Middle Names -->

    <property name = 'lastName'>
      <column name = 'last_name'>
        <comment>Last name of the Person</comment>
      </column>
    </property>

    <property name = 'firstName'>
      <column name = 'first_name'>
        <comment>First name of the Person</comment>
      </column>
    </property>

    <property name = 'middleName'>
      <column name = 'middle_name'>
        <comment>Middle name of the Person</comment>
      </column>
    </property>


    <!-- Gender -->

    <property name = 'gender'>
      <column name = 'gender'>
        <comment>The gender of the person (M of F)</comment>
      </column>
    </property>


    <!-- Email, Mobile Phone, Work Phone -->

    <property name = 'email'>
      <column name = 'email'>
        <comment>The Person e-mail</comment>
      </column>
    </property>

    <property name = 'phoneMob'>
      <column name = 'phone_mob'>
        <comment>The Person mobile (cell) phone</comment>
      </column>
    </property>

    <property name = 'phoneWork'>
      <column name = 'phone_work'>
        <comment>The Person work phone</comment>
      </column>
    </property>


  </union-subclass>
</hibernate-mapping>