<?xml version = '1.0' encoding = 'UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
   'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>

<hibernate-mapping package = 'com.tverts.endure.person'>

  <union-subclass name = 'FirmEntity' table = 'core_firm'
    extends = 'com.tverts.endure.core.Entity'>


    <!-- Domain reference -->

    <many-to-one name = 'domain' foreign-key = 'fk_core_firm_domain'>

      <column name = 'fk_domain' not-null = 'true'
        index = 'ix_core_firm_domain'>

        <comment>Domain where the Firm is registered</comment>
      </column>
    </many-to-one>

  </union-subclass>
</hibernate-mapping>